# NAIAS Environment Variables Template
# Copy this file to .env.local and fill in your values

# ============================================
# DATABASE CONFIGURATION (Optional for demo)
# ============================================
# For development with Neon PostgreSQL:
# 1. Go to https://console.neon.tech
# 2. Create free account and project
# 3. Copy the connection string below
DATABASE_URL=postgresql://user:password@host/database_name

# ============================================
# AWS CONFIGURATION (Optional for demo)
# ============================================
# Your AWS region
AWS_REGION=us-east-1

# AWS credentials (get from AWS Console)
# Create IAM user with Athena, CloudWatch, Security Hub, and EC2 permissions
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# ============================================
# BEDROCK (Claude AI) CONFIGURATION
# ============================================
# AWS region where Bedrock is available (usually us-east-1 or us-west-2)
AWS_BEDROCK_REGION=us-east-1

# Model ID for Claude 3.5 Sonnet
AWS_BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0

# ============================================
# ATHENA CONFIGURATION
# ============================================
# S3 bucket path where Athena results are stored
# Format: s3://bucket-name/path/
# Example: s3://my-company-athena-results/naias/
AWS_ATHENA_OUTPUT_LOCATION=s3://your-bucket/naias-results/

# Database name for Athena queries (default: default)
AWS_ATHENA_DATABASE=default

# ============================================
# CLOUDWATCH CONFIGURATION
# ============================================
# AWS region for CloudWatch (usually same as AWS_REGION)
AWS_CLOUDWATCH_REGION=us-east-1

# ============================================
# VPC FLOW LOGS CONFIGURATION
# ============================================
# CloudWatch log group for VPC Flow Logs
AWS_VPC_FLOW_LOGS_GROUP=/aws/vpc/flowlogs

# ============================================
# SECURITY HUB CONFIGURATION
# ============================================
# AWS region for Security Hub
AWS_SECURITY_HUB_REGION=us-east-1

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Environment (development, staging, production)
NODE_ENV=development

# Application name (for logging and identification)
APP_NAME=NAIAS

# ============================================
# INTEGRATION SETTINGS (Optional)
# ============================================
# Slack webhook for notifications (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Jira integration (optional)
# JIRA_HOST=https://your-company.atlassian.net
# JIRA_API_TOKEN=your_jira_token

# Email configuration (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
